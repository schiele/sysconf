LINKS[qscintilla-lib]="/usr/lib64/libqscintilla2_qt5.so.15 /usr/lib64/libqscintilla2_qt5.so.15.2.0 /usr/lib64/libqscintilla2_qt5.so.15.2"
LINKS[qt6scxml]="/usr/lib64/qt6/mkspecs/features/qscxmlc.prf /usr/lib64/qt6/mkspecs/modules/qt_lib_scxml.pri /usr/lib64/qt6/mkspecs/modules/qt_lib_statemachine_private.pri /usr/lib64/qt6/mkspecs/modules/qt_lib_scxml_private.pri /usr/lib64/qt6/mkspecs/modules/qt_lib_statemachine.pri /usr/lib64/qt6/modules/StateMachine.json /usr/lib64/qt6/modules/Scxml.json /usr/lib64/qt6/metatypes/qt6scxml_relwithdebinfo_metatypes.json /usr/lib64/qt6/metatypes/qt6statemachine_relwithdebinfo_metatypes.json"
LINKS[qt6scxml-dev]="/usr/lib64/libQt6Scxml.so /usr/lib64/libQt6StateMachine.prl /usr/lib64/pkgconfig/Qt6Scxml.pc /usr/lib64/pkgconfig/Qt6StateMachine.pc /usr/lib64/cmake/Qt6Scxml /usr/lib64/cmake/Qt6StateMachine /usr/lib64/cmake/Qt6ScxmlTools /usr/lib64/libQt6StateMachine.so /usr/lib64/libQt6Scxml.prl /usr/include/QtScxml /usr/include/QtStateMachine /usr/lib64/cmake/Qt6BuildInternals/StandaloneTests/QtScxmlTestsConfig.cmake"
LINKS[qt6scxml-lib]="/usr/lib64/libQt6Scxml.so.6.6.2 /usr/lib64/libQt6StateMachine.so.6.6.2 /usr/lib64/libQt6Scxml.so.6 /usr/lib64/libQt6StateMachine.so.6"
LINKS[qt6scxml-libexec]="/usr/libexec/qscxmlc"
LINKS[qt6websockets]="/usr/lib64/qt6/mkspecs/modules/qt_lib_websockets.pri /usr/lib64/qt6/mkspecs/modules/qt_lib_websockets_private.pri /usr/lib64/qt6/modules/WebSockets.json /usr/lib64/qt6/metatypes/qt6websockets_relwithdebinfo_metatypes.json /usr/lib64/qt6/qml/QtWebSockets/qmldir /usr/lib64/qt6/qml/QtWebSockets/plugins.qmltypes"
LINKS[qt6websockets-dev]="/usr/lib64/pkgconfig/Qt6WebSockets.pc /usr/lib64/libQt6WebSockets.prl /usr/lib64/cmake/Qt6Qml/QmlPlugins/Qt6qmlwebsocketsTargets-relwithdebinfo.cmake /usr/lib64/cmake/Qt6Qml/QmlPlugins/Qt6qmlwebsocketsAdditionalTargetInfo.cmake /usr/lib64/cmake/Qt6Qml/QmlPlugins/Qt6qmlwebsocketsConfigVersion.cmake /usr/lib64/cmake/Qt6Qml/QmlPlugins/Qt6qmlwebsocketsTargets.cmake /usr/lib64/cmake/Qt6Qml/QmlPlugins/Qt6qmlwebsocketsConfig.cmake /usr/lib64/cmake/Qt6Qml/QmlPlugins/Qt6qmlwebsocketsConfigVersionImpl.cmake /usr/lib64/cmake/Qt6WebSockets /usr/lib64/cmake/Qt6BuildInternals/StandaloneTests/QtWebSocketsTestsConfig.cmake /usr/lib64/libQt6WebSockets.so /usr/include/QtWebSockets"
LINKS[qt6websockets-lib]="/usr/lib64/libQt6WebSockets.so.6.6.2 /usr/lib64/libQt6WebSockets.so.6 /usr/lib64/qt6/qml/QtWebSockets/libqmlwebsocketsplugin.so"

DIR=~/devroot

curl https://cdn.download.clearlinux.org/releases/current/clear/x86_64/os/Packages/ |
sed -ne 's/^<a href="\(.*\)-\(.*-.*\).x86_64.rpm">.*<\/a>.*$/VERSION[\1]=\2/p' > $DIR/collect.lst
source $DIR/collect.lst

TODO=""
echo checking...
for p in "${!LINKS[@]}"; do
	echo " $p-${VERSION[$p]}"
	if ! test -d $DIR/$p-${VERSION[$p]}; then (
		echo MISSING
		cd $DIR
		wget https://cdn.download.clearlinux.org/releases/current/clear/x86_64/os/Packages/$p-${VERSION[$p]}.x86_64.rpm
		mkdir $p-${VERSION[$p]}
		rpm2cpio $p-${VERSION[$p]}.x86_64.rpm | (cd $p-${VERSION[$p]} && cpio --extract --unconditional --preserve-modification-time --make-directories)
	) fi
	FINDCMD="find $DIR/$p-${VERSION[$p]} -path $DIR/$p-${VERSION[$p]}/V3 -prune -o"
	for l in ${LINKS[$p]}; do
		s="$DIR/$p-${VERSION[$p]}$l"
		FINDCMD="$FINDCMD -path $s -prune -o"
		if ! readlink -e $s >/dev/null; then
			echo inconsistent entry: $s
			exit 1
		fi
		if ! test -e $l; then
			echo "  $l -> $s (new)"
			TODO="$TODO
sudo ln -s $s $l"
		elif t=$(readlink $l); then
			if ! test "$s" = "$t"; then
				echo "  $l -> $s (was $t)"
				TODO="$TODO
sudo rm -f $l
sudo ln -s $s $l"
			else
				echo "  $l -> $s (ok)"
			fi
		else
			echo no link: $l
			exit 1
		fi
	done
	UNHANDLED=$($FINDCMD -not -type d -print)
	if test "$UNHANDLED"; then
		echo "unhandled: $UNHANDLED"
		exit 1
	fi
done
if test "$TODO"; then
	echo "please execute:$TODO"
else
	echo "everything good"
fi
