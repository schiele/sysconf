LINKS[OpenCSG-dev]="/usr/include/opencsg.h /usr/lib64/libopencsg.so"
LINKS[OpenCSG-lib]="/usr/lib64/libopencsg.so.1.4.2 /usr/lib64/libopencsg.so.1.4 /usr/lib64/libopencsg.so.1"
#LINKS[qhull-staticdev]="/usr/lib64/libqhullstatic_r.a /usr/lib64/libqhullcpp.a /usr/lib64/libqhullstatic.a"
